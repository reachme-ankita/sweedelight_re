<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sweedelight.www.sweedelight.MainActivity"
    tools:showIn="@layout/activity_main">

    <include android:id="@id/toolbar" layout="@layout/tool_bar"/>

    <Button
        android:id="@+id/about_us_button"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:onClick="startAboutUs"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/register_button"
        android:layout_below="@id/about_us_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:onClick="startRegister"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/review_button"
        android:layout_below="@id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:onClick="startReview"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/account_button"
        android:layout_below="@id/review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:onClick="startAccount"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/login_button"
        android:layout_below="@id/account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="startLogin"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="search"
        android:id="@+id/button"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />


</FrameLayout>
